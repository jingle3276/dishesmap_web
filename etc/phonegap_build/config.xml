<?xml version="1.0" encoding="UTF-8" ?>
<!-- This file is copied to mobile build folder/www/config.xml and used by phonegap build
-->
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "wz.dmwa.app"
        versionCode = "18"
        version     = "0.0.2" >
        <!-- version is optional and Android only -->
    <name>Wise Foody</name>
    <description>
        Find top reviewed dishes around you.
    </description>

    <preference name="phonegap-version" value="3.6.3" />
    
    <preference name="fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true"/>

    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-targetSdkVersion" value="19" />
    <!-- http://stackoverflow.com/questions/23387007/phonegap-build-permissions-in-android -->
    <preference name="permissions" value="none"/>
    <feature name="http://api.phonegap.com/1.0/geolocation" />

    <icon src="icon.png" />
    
    <!-- FIXME: not working in this way. Copying the images to ios platform build 
    folder directly at rake:ios:xcode -->
    <!-- iPhone and iPod touch -->
        <!-- <splash src="splash.png" />
 -->
<!--     <splash src="Wisefoody.png" platform="ios" width="320" height="480" />
    <splash src="Wisefoody@2x.png" platform="ios" width="640" height="960" /> -->
    <!-- iPhone 5 / iPod Touch (5th Generation) -->
<!--     <splash src="Wisefoody-568h@2x.png" platform="ios" width="640" height="1136" />
 -->
    <content src="index.html" />
    <access origin="*" />
</widget>

